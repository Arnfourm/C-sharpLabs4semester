@using task_beta.Controllers
@model watchController
@{

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <title>Details</title>
    <link rel="stylesheet" href="~/css/DetailWatch.css">
</head>
<body>
    <header>
        <ul class="list-style">
            <li><a href="~/Home">Home</a></li>
            <li><a href="#">Observer</a></li>
            <li><a href="~/GroupWork/GroupWork">GroupWork</a></li>
            <li><a href="~/Edit/Editor">Editor</a></li>
            <li><a href="~/Delete/Deleter">Deleter</a></li>
        </ul>
    </header>
    <main>
        <div class="addModule orderContainer ">
            <div class="textInMain addText textOrder">
                <p>СТРАНИЦА ДЕТАЛЬНОГО ПРОСМОТРА ЭЛЕМЕНТА (DETAILS)</p>
            </div>

            <div class="orderItemsGrid">
                <div class="orderHeader">Id продукта</div>
                <div class="orderHeader">Название продукта</div>
                <div class="orderHeader">Цена продукта</div>
                <div class="orderHeader">Тип продукта</div>

                @foreach (var product in ViewBag.products)
                {
                    <div class="singleItem">@product.ProductId</div>
                    <div class="singleItem">@product.ProductName</div>
                    <div class="singleItem">@product.ProductCost$</div>
                    <div class="singleItem">@product.ProductType</div>
                }
            </div>

        </div>
    </main>
</body>
</html>